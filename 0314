m_str = "python程式設計"
print("[2:5] = ", m_str[2:5])
print("[3:9] = ", m_str[3:9])
print("[3:-1] =", m_str[3:-1])
print("[-1:-7] = ", m_str[-1:-7])
print("[-7:-1] = ", m_str[-7:-1])
print("[-1:-7:-1] = ", m_str[-1:-7:-1])
print("[::-1] = ", m_str[::-1])

