else:
    print("smaller/equal")
    
###


import random
n = random.randint(0, 100)

m = int(input("請輸入整數(0~100):"))

if m > n:
    print("bigger than n")
    print("{} > {}".format(m, n))
elif m == n:
    print("same")
    print("{} = {}".format(m, n))
else:
    print("smaller/equal")
    print("{} > {}".format(n, m))
