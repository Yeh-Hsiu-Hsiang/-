mInput = input("請輸入:")
print("是不是全字母", str.isalpha(mInput))
print("是不是全數字", mInput.isdigit())
print("轉大寫", mInput.upper())

###

x = 3.1415926
y = 10.123456789
print(format(y, "5.2f"), format(x, "5.2f"))
print("{0:5.2f} > {1:5.2f}".format(y,x))
print("%5.2f > %5.2f" % (y, x))

